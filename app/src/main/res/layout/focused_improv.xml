<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="wcm.jcrogar.fca.wcm.focused_improv">


    <TextView
        android:id="@+id/textView73"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_horizontal"
        android:text="Mision"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView74" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_vertical|center_horizontal"

                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_horizontal"
        android:text="Objetivo"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="200dp"
        android:layout_height="246dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:gravity="top|left"
        android:text="Guiar, aplicar tecnicas, instrumentos y metodos especificos para la solucion de problemas de dificultad creciente en relacion a la complejidad de las causas de los desperdicios y de las perdidas que hay que eliminar, pero sobre, todo preparar a la gente para que se les aplique de forma adecuada."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView73"
        android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="275dp"
                android:layout_height="79dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Eliminar grandes perdidas resultantes el despliegue de costos que impactan sobre el presupuesto y en los principaes indicadores de la planta."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView70"
                android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnFocusedSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="7 Pasos"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView72"
        app:layout_constraintTop_toBottomOf="@+id/imageView38"
        android:layout_marginStart="18dp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="332dp"
                android:layout_height="91dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.625"
                app:srcCompat="@drawable/focused_improv"
                android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="125dp"
        android:layout_height="157dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/textView72"
        app:layout_constraintTop_toBottomOf="@+id/textView74"
        app:srcCompat="@drawable/focused_foco" />

</android.support.constraint.ConstraintLayout>
