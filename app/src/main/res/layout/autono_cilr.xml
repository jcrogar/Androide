<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="wcm.jcrogar.fca.wcm.autono_cilr">

    <TextView
        android:id="@+id/textView105"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:background="@android:color/holo_purple"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="332dp"
        android:layout_height="91dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/autonomous_main"
        app:layout_constraintTop_toTopOf="@+id/textView105"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView105"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView105"
        app:layout_constraintBottom_toBottomOf="@+id/textView105"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/textView139"
        android:layout_width="168dp"
        android:layout_height="248dp"
        android:gravity="left"
        android:text="Un ciclo estandar de Mantenimiento Autonomo es un documento que tiene las instrucciones para hacer una actividad de limpieza, inspeccion, Lubricacion, o Reapriete programada en el calendario AM."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView138"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView138"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_purple"
        android:gravity="center_vertical|center"
        android:text="Ciclos Estandar CILR"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView105" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="160dp"
        android:layout_height="205dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/service_am"
        app:layout_constraintLeft_toRightOf="@+id/textView139"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView138" />


</android.support.constraint.ConstraintLayout>
